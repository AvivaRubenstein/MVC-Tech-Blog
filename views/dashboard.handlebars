<div class="container">
   
  <div class="row">
    {{#each user as |user|}}
    <div class="col">
         <h2>{{user.name}}</h2>
    {{#if user.posts.length}}
      <p>{{user.post.title}}</p>
      <p>{{user.post.content}}</p>
      <p>Posted on {{format_date post.date_created}}</p>
      <p>Posted on {{user.comment.content}}</p>
    {{/if}}
    </div>
    {{/each}}
  </div>
</div>