<div class="container">
   
  <div class="row">
    <div class="col">
         <h2>Hello, {{user.name}}!</h2>
    <div class="col">
      <div class="card create-post">
      <h3>Create A New Blog Post: </h3>
      <form class="new-post-form">
        <div class="form-group">
        <label for="post-title">Post title: </label>
        <input class="form-input" type="text" id="post-title" name="post-title"/>
        </div>
        <div class="form-group">
        <label for="post-content">Content: </label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
        </div>
        <button type="submit" class="btn create-post">Create Post</button>
        
      </form>
    </div>
    </div>
    </div>
    </div>
    
    {{#if user.posts.length}}
    <h3>Your Existing Blog Posts: </h3>
    <div class="row post-list">
    {{#each user.posts as |post| }}
    <div class ="card post-card col-5">
      <h4 class="card-title">{{post.title}}</h4>
      <p class="card-text">{{post.content}}</p>
      <h6 class="card-subtitle">Posted on {{format_date post.date_created}}</h6>

      <button  type="submit" class="btn del-btn" data-id="{{post.id}}">DELETE</button>
      <button  type="submit" class="btn update-btn" data-id="{{post.id}}">UPDATE POST</button>

       {{#if post.comments.length}}
       <div class="dash-comment-card">
          <h5 class="comment-heading">Comments:</h6>
        {{#each post.comments as |comment|}}
      <div class="card dash-comment-card dash-comment"> <span class="commenter-name">{{comment.user.name}}:</span>  {{comment.content}}</div>
        {{/each}}
      </div>
      {{/if}}
    </div>
    {{/each}}
    </div>
    {{/if}}
  </div>
</div>
<script src="/js/dashboard.js"></script>