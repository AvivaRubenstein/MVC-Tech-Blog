
<div class="container">
  <div class="row">
    {{#each posts as |post|}}
    <div class="col">
      <div class="card ">
        <div class="card-body" data-id="{{post.id}}">
    <p>{{post.title}}</p>
      <p>{{post.content}}</p>
      <p>By {{post.user.name}} on {{format_date post.date_created}}</p>
      <button type ="submit" class="post-list btn btn-info">View full post</button>
   </div>
   </div>
    </div>
    {{/each}}
  </div>
</div>
<script src="/js/homepage.js"></script>