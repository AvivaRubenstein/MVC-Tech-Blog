<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
            <h2>{{post.title}}</h2>
            <h5>{{post.content}}</h5>
            <h6>Written by: {{post.user.name}} on {{format_date post.date_created}}</h6>
        </div>
         </div>
         </div>
        <div class="row">
            <div class="col">
                <div class="card">
                    <h4>Comments:</h4>
                </div>
            </div>
        </div>
        <div class="row">
        <div class="col">
            {{#if post.comments.length}}
            {{#each post.comments as |comment|}}
            <div class="card">
            <h6>{{comment.content}} <br> on {{format_date comment.date_created}}</h6>
            </div>
            {{/each}}
            {{/if}}
            
        </div>
   </div>
</div>